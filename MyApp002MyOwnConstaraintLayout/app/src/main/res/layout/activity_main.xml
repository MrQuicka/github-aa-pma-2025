<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etSurname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Surname"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@id/etName"
        app:layout_constraintEnd_toEndOf="@id/etName"
        app:layout_constraintTop_toBottomOf="@id/etName"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@id/etName"
        app:layout_constraintEnd_toEndOf="@id/etName"
        app:layout_constraintTop_toBottomOf="@id/etSurname"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:inputType="textPostalAddress"
        app:layout_constraintStart_toStartOf="@id/etName"
        app:layout_constraintEnd_toEndOf="@id/etName"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Order"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@id/etName"
        app:layout_constraintEnd_toEndOf="@id/etName"
        app:layout_constraintTop_toBottomOf="@id/etAddress"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnProcess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Proces"
        app:layout_constraintStart_toStartOf="@id/etName"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        app:layout_constraintTop_toBottomOf="@id/etOrder"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@id/btnProcess"
        app:layout_constraintEnd_toEndOf="@id/etName"
        app:layout_constraintTop_toTopOf="@id/btnProcess"
        android:layout_marginStart="8dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/etName"
        app:layout_constraintEnd_toEndOf="@id/etName"
        app:layout_constraintTop_toBottomOf="@id/btnProcess"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvRecapTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekapitulace"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/etName"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/tvRecapTitle"
        app:layout_constraintStart_toStartOf="@id/etName"
        app:layout_constraintEnd_toEndOf="@id/etName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:padding="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
